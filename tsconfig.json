{
   "compilerOptions": {
       "module": "commonjs",
       "outDir": "dist",
       "declaration": true,
       "esModuleInterop": true,
       "target": "es6",
       "noImplicitAny": true,
       "sourceMap": true,
       "moduleResolution": "node",
       "strictFunctionTypes": true,
       "noFallthroughCasesInSwitch": true,
       "noUnusedLocals": true,
       "noUnusedParameters": false,
       "pretty": true,
       "allowJs": false,
       "removeComments": true,
       "noImplicitReturns": true,
       "preserveConstEnums": true,
       "baseUrl": ".",
       "paths": {
           "*": [
               "node_modules/*",
               "src/types/*"
           ]
       }
   },
   "include": [
       "src/**/*",
       "test/**/*"
   ]
}